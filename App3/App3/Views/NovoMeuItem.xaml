<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.NovoMeuItem"            
             Padding="40"
             Title="Adicionar Meu Item">
    <StackLayout>

        <Entry  Keyboard="Text" Placeholder="Nome do Seu Item " x:Name="xItem"/>
        <Entry Keyboard="Text" Placeholder="Ingredientes: " x:Name="xIngredientes"/>
        <Entry Keyboard="Numeric" Placeholder="Quantidade (g)" x:Name="xQuantidade"/>
        <Entry Placeholder="Proteinas" x:Name="xProteina"/>
        <Button BorderRadius="8" Text="Enviar" x:Name="enviar" Clicked="enviar_Clicked" BackgroundColor="#127ac7" TextColor="White"/>

    </StackLayout>

</ContentPage>