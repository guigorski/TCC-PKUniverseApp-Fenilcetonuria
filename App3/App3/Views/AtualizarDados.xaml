<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.AtualizarDados"
             Padding="40"
             Title="Atualizar Dados">
    <StackLayout  VerticalOptions="CenterAndExpand">
        <Label Text="Nome: " />
        <Entry  Text="{Binding Nome}" Keyboard="Text" Placeholder="Nome" x:Name="xNome"/>
            <Label Text="Peso: " />
            <Entry  Placeholder="Peso" x:Name="xPeso"/>
                <Label Text="Idade: "/>
                <Entry  Placeholder="Idade" x:Name="xData"/>
        <Button BorderRadius="8" Text="Enviar" x:Name="enviar" Clicked="enviar_Clicked" BackgroundColor="#127ac7" TextColor="White"/>

        


    </StackLayout>
</ContentPage>