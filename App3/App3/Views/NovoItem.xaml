<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.NovoItem"
              Padding="40"
             Title="Novo Item">
    <StackLayout>

        <Entry  Keyboard="Text" Placeholder="Nome do Produto" x:Name="xNomeProduto"/>
        <Entry Keyboard="Text" Placeholder="Marca" x:Name="xMarca" />
        <Entry Keyboard="Numeric" Placeholder="Quantidade (g)" x:Name="xQuantidade"/>
        <Entry  Placeholder="Proteinas" x:Name="xProteina"/>
        <Button BorderRadius="8" Text="Enviar" x:Name="enviar" Clicked="enviar_Clicked"  BackgroundColor="#127ac7" TextColor="White"/>

    </StackLayout>

</ContentPage>