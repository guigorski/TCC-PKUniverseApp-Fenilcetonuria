<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.AtualizarDados"
             Padding="40"
             Title="Atualizar Dados">
    <StackLayout>

        <Entry  Keyboard="Text" Placeholder="Nome" x:Name="xNome"/>
        <Entry Keyboard="Numeric" Placeholder="Peso" x:Name="Peso"/>
        <Entry Keyboard="Numeric" Placeholder="Altura" x:Name="Altura"/>
        <DatePicker Date="5 Jan 2017" x:Name="Data"/>
        <Button Text="Enviar" x:Name="enviar" Clicked="enviar_Clicked" BackgroundColor="#127ac7" TextColor="White"/>
        <Button  Text="Voltar" Clicked="Button_Clicked" VerticalOptions="End"/>

    </StackLayout>
</ContentPage>